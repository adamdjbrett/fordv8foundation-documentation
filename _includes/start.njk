<div class="row mt-3 mb-3">
<div class="col-md-8 mx-auto p-3 p-md-5 text-center">
<img class="img-fluid mb-3 col-md-8 col-12" alt="{{title}}" width="100%" height="100%" src="{{image}}"/>
<h1>{{title}}</h1>
<h2 class="lead mb-3">{{description}}</h2>
<p>
<a href="{{button.url}}" class="btn btn-primary btn-lg col-md-4 col-12">{{button.text}}</a>
</p>
{{ content | safe }}
</div>
</div>

