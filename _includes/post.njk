---
layout: base.njk
---
<div class="col-md-12 mt-3">
<div class="ratio ratio-16x9">
  <iframe src="{{video}}" title="{{title}}" allowfullscreen class="rounded shadow-sm"></iframe>
</div>
</div>

<div class="col-md-8 mx-auto p-3 p-md-5">
<div class="text-center">
<h1>{{ title }}</h1>
{% if description %}<h2 class="lead mb-3">{{description}}</h2>{% endif %}
</div>
{{ content | safe }}
{%- if collections.posts %}
{%- set previousPost = collections.posts | getPreviousCollectionItem %}
{%- set nextPost = collections.posts | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<div class="row">
<div class="col-md-6 p-3">{%- if previousPost %}← Previous<br> <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>{% endif %}</div>
<div class="col-md-6 p-3 text-end">{%- if nextPost %}Next →<br><a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>{% endif %}</div>
</div>
{%- endif %}
{%- endif %}

</div>
